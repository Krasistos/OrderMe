@using OrderMe.Core.Models.MenuItem
@model AddMenuItemViewModel

<h2>Add New MenuItem</h2>

<form asp-controller="MenuItem" asp-action="AddMenuItem" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="RestaurantId" /> <!-- This hidden input will hold the RestaurantId -->

    <div class="form-group">
        <label asp-for="Name">MenuItem Name:</label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Price">Price:</label>
        <input asp-for="Price" type="number" step="0.01" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Description">Description:</label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFile">MenuItem Image:</label>
        <input asp-for="ImageFile" type="file" class="form-control-file" accept="image/*" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <!-- Display the RestaurantId for debugging (optional) -->
    <p>RestaurantId: @Model.RestaurantId</p>

    <button type="submit" class="btn btn-primary">Add MenuItem</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}