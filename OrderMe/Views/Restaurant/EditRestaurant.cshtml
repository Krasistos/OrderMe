
@model RestaurantEditViewModel

<h2>Edit Restaurant</h2>

<form asp-controller="Restaurant" asp-action="EditRestaurant" method="post">
    <div class="form-group">
        <label for="Name">Restaurant Name:</label>
        <input type="text" id="Name" name="Name" class="form-control" required value="@Model.Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <div id="map" style="height: 400px;"></div>
    <input type="hidden" id="latitude" name="Latitude" value="@Model.Latitude" />
    <input type="hidden" id="longitude" name="Longitude" value="@Model.Longitude" />

    <div class="form-check">
        <input type="checkbox" id="IsActive" name="IsActive" class="form-check-input"
               value="true" @(Model.IsActive ? "checked" : "") />
        <label class="form-check-label" for="IsActive">Is Active</label>
        <input type="hidden" name="IsActive" value="false" /> <!-- Hidden field for false value -->
    </div>

    <button type="submit" class="btn btn-primary">Update Restaurant Information</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
