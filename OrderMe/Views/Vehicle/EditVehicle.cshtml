@model VehicleEditViewModel

<style>
    .card-img {
        max-width: 100%; /* Ensure image does not exceed the width of the card */
        height: auto; /* Maintain aspect ratio */
        display: block; /* Ensure image does not have any extra spacing */
        margin-bottom: 15px; /* Add spacing below the image */
    }
</style>

<h2>Edit Vehicle</h2>

<form asp-controller="Vehicle" asp-action="EditVehicle" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="Id" />

    <div class="form-group">
        <label asp-for="Make">Vehicle Make:</label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model">Vehicle Model:</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LicensePlate">License Plate:</label>
        <input asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="ImageFile">Upload New Vehicle Image:</label>
        <input type="file" id="ImageFile" name="ImageFile" accept="image/*" class="form-control-file" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Update Vehicle</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
