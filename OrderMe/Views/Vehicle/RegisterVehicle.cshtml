@model VehicleRegistrationViewModel

<h2>Add New Vehicle</h2>

<form asp-controller="Vehicle" asp-action="AddVehicle" method="post" enctype="multipart/form-data">
    <div class="form-group">
        <label for="make">Make:</label>
        <input type="text" id="make" name="Make" class="form-control" value="@Model.Make" required />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="model">Model:</label>
        <input type="text" id="model" name="Model" class="form-control" value="@Model.Model" required />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="licensePlate">License Plate:</label>
        <input type="text" id="licensePlate" name="LicensePlate" class="form-control" value="@Model.LicensePlate" required />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label for="imageFile">Upload Image:</label>
        <input type="file" id="imageFile" name="ImageFile" class="form-control-file" accept="image/*" required />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary">Add Vehicle</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
