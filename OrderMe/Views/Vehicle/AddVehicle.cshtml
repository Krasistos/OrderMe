@model AddVehicleViewModel

<h2>Add New Vehicle</h2>

<form asp-controller="Vehicle" asp-action="AddVehicle" method="post" enctype="multipart/form-data">
    <input type="hidden" asp-for="GarageId" /> <!-- This hidden input will hold the GarageId -->

    <div class="form-group">
        <label asp-for="Make">Vehicle Make:</label>
        <input asp-for="Make" class="form-control" />
        <span asp-validation-for="Make" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Model">Vehicle Model:</label>
        <input asp-for="Model" class="form-control" />
        <span asp-validation-for="Model" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="LicensePlate">License Plate:</label>
        <input asp-for="LicensePlate" class="form-control" />
        <span asp-validation-for="LicensePlate" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="ImageFile">Vehicle Image:</label>
        <input asp-for="ImageFile" type="file" class="form-control-file" accept="image/*" />
        <span asp-validation-for="ImageFile" class="text-danger"></span>
    </div>

    <!-- Display the GarageId for debugging (optional) -->
    <p>GarageId: @Model.GarageId</p>

    <button type="submit" class="btn btn-primary">Add Vehicle</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
